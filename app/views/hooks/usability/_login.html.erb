<% if (Setting.plugin_usability || {})['replace_login_page'] %>
<style>
#content {
  position: absolute;
  z-index: 9999999;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100% !important;
  box-sizing: border-box;
  padding: 0 !important;
}

#login-form table {
  background-color: #FFF;
  border: 1px #ccc solid;
  border-radius: 5px;
  box-sizing: border-box;
  width: 360px;
  margin-top: 20px;
  padding: 20px;
  font-size: 14px;
}

#login-form table td {
  /*padding: 29px;*/
}

#login-form table tr>td:first-of-type {
  display: none;
}

#login-form input {
  padding: 7px 9px;
  height: 36px;
  font-size: 16px;
  border-radius: 4px;
  margin: 0;
}

#login-form input#username,
#login-form input#password {
  width: 100%;
  box-sizing: border-box;
}

#login-form input[type=submit] {
  padding: 5px 15px;
  height: 24px;
  border: initial;
  box-sizing: content-box;
  color: #FFF;
  border: 1px solid #CCC;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  background-color: #006DCC;
  background-image: -moz-linear-gradient(top, #0088cc, #0044cc);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#08C), to(#04C));
  background-image: -webkit-linear-gradient(top, #08C, #04C);
  background-image: -o-linear-gradient(top, #0088cc, #0044cc);
  background-image: linear-gradient(to bottom, #08C, #04C);
  background-repeat: repeat-x;
  border-color: #04C #04C #002A80;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0088cc', endColorstr='#ff0044cc', GradientType=0);
  filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
  margin-top: -21px;
  border-radius: 5px;
  font-size: 17.5px;
}

#login-form label {
  font-weight: normal;
}

/*#login-form label>input:after {
  content: '\2014';
}
*/
#content div.flash {
  width: 360px;
  margin-right: auto;
  margin-left: auto;
  box-sizing: border-box;

  padding: 8px 35px 8px 14px;
  margin-bottom: 20px;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
  background-color: #FCF8E3;
  border: 1px solid #FBEED5;

  border-radius: 4px;
  background-image: none;
  color: #B94A48;
  background-color: #F2DEDE;
  border-color: #EED3D7;
  margin: 0 auto;
}

#footer-block {
  bottom: 0;
  position: absolute;
  margin-bottom: 20px;
  width: 100%;
  box-sizing: border-box;
}

#rmplus-logo {
  text-align: left;
  margin:0;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}

#content h1 {
  text-align: center;
  font-weight: normal;
  font-size: 28pt;
}

</style>



<script>

$('#login-form table tr').each( function (index) {
  var tr = $(this);
  var label = tr.find('label:first')
  if (label.length == 1) {
    tr.find('input').attr('placeholder', label.text().replace(':',''));
  }
  var a = tr.find('a:first');
  if (a.length == 1) {
    a.addClass('L').prependTo(tr.find('td:last'));
  }
});

$('#header h1').prependTo('#content');

$('div.flash').prependTo('#login-form');

$(document).ready(function () {

  $(window).on('resize', function () {
    reallocate_login_form();
  });

  reallocate_login_form();
});

function reallocate_login_form() {
    var doc_h = jQuery(window).height();
    var login_h = $('#login-form').outerHeight();
    var fl_h = $('div.flash').outerHeight();
    if (fl_h > 0) { fl_h += 20; }

    var mrg = (doc_h - login_h - fl_h) / 2 - 40;
    $('#login-form').css('margin-top', mrg.toString()+'px');
}

</script>

<div id="footer-block">
<div id="rmplus-logo" style="text-align: center; margin-top: 10px;">
  <%= image_tag 'logo.png', plugin: :usability, alt: l(:label_rmplus_logo), title: l(:label_rmplus_logo), width: 104, height: 39, style: 'vertical-align: bottom;' %>
</div>
</div>
<% end %>